<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_open_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a2a2a2"
    tools:context="com.scottlindley.muchtodowithoutado.Activities.ToDoListActivity">

    <RelativeLayout
        android:id="@+id/list_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/list_name"
            android:layout_width="match_parent"
            android:alpha="0.9"
            android:layout_height="75dp"
            android:background="#e0fcef"
            android:textSize="24dp"
            android:text="Hello"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/list_splash"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:text="Add items to your list and get things done!"
            android:textSize="34dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/items_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/list_name">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/list_floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:backgroundTint="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:alpha="0.9"
        android:src="@drawable/ic_add_white_24dp"/>


</android.support.design.widget.CoordinatorLayout>
